{
  "name": "lasr.tamu.edu",
  "version": "1.0.0",
  "description": "LASR Laboratory Website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-sass": "sass --watch src/style/style.scss:static/css/style.css",
    "watch-js": "watchify src/js/dev.js -o static/js/app.js -dv",
    "watch": "npm run watch-sass & npm run watch-js",
    "build-prep": "node src/js/prep.js",
    "build-js": "browserify src/js/prod.js | uglifyjs -mc > static/js/charts.js",
    "build-sass": "sass src/css/style.scss:static/css/charts.css --style compressed --sourcemap=none",
    "build": "npm run build-prep && (npm run build-sass && npm run build-js)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lasr/lasr.tamu.edu.git"
  },
  "author": "Clark Moody",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lasr/lasr.tamu.edu/issues"
  },
  "homepage": "https://github.com/lasr/lasr.tamu.edu#readme"
}
